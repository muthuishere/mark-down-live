{
  "name": "slide-presenter-live-stream",
  "version": "0.1.0",
  "description": "Present your slides in a live stream",
  "main": "bin/index.js",
  "type": "module",
  "scripts": {
    "coverage": "nyc npm run test",
    "test": "mocha --experimental-loader=@istanbuljs/esm-loader-hook 'src/**/*.test.js' --recursive --timeout 60000 ",
    "publish-package": "npm publish"
  },
  "bin": {
    "present-mark-deck": "bin/index.js"
  },
  "nyc": {
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/!(*.test.*).[tj]s?(x)"
    ],
    "reporter": [
      "cobertura",
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  },
  "release-it": {
    "hooks": {
      "before:init": "npm test",
      "after:git:release": "echo After git push, before github release",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    },
    "git": {
      "commitMessage": "muthuishere: release v${version}"
    },
    "npm": {
      "publish": false
    }
  },
  "keywords": [
    "mark-deck-script",
    "slide-stream",
    "slide",
    "stream"
  ],
  "author": "Muthukumaran Navaneethakrishnan(https://github.com/muthuishere/)",
  "license": "MIT",
  "homepage": "https://github.com/muthuishere/mark-deck-script",
  "repository": {
    "type": "git",
    "url": "git@github.com:muthuishere/mark-deck-script.git"
  },
  "bugs": {
    "url": "https://github.com/muthuishere/mark-deck-script/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@marp-team/marp-cli": "^3.4.0",
    "ansi-colors": "^4.1.3",
    "axios": "^1.6.1",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "command-exists": "^1.2.9",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "figlet": "^1.7.0",
    "inquirer": "^9.2.12",
    "inquirer-search-checkbox": "^1.0.0",
    "p-limit": "^5.0.0",
    "shelljs": "^0.8.5",
    "which": "^4.0.0",
    "winston": "^3.11.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@istanbuljs/esm-loader-hook": "^0.2.0",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "mocha-param": "^2.0.1",
    "nyc": "^15.1.0",
    "prettier": "^3.1.0",
    "release-it": "*",
    "sinon": "^17.0.1"
  }
}
