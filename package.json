{
  "name": "mark-down-live",
  "version": "0.3.0",
  "description": "Effortlessly stream and present your Markdown slides live in-browser with MarkDownLive. Ideal for educators, presenters, and anyone needing to create dynamic, real-time presentations. Simply write in Markdown, and let MarkDownLive handle the live streaming magic!",
  "main": "bin/index.js",
  "type": "module",
  "scripts": {
    "coverage": "nyc npm run test",
    "test": "mocha --experimental-loader=@istanbuljs/esm-loader-hook 'src/**/*.test.js' --recursive --timeout 60000 ",
    "run-template": "node bin/index.js testdata/mockdocs/programming.md",
    "generate-license": "generate-license-file --input package.json --output ./THIRD-PARTY-LICENSES.txt --overwrite",
    "publish-package": "npm publish"
  },
  "bin": {
    "present-mark-deck": "bin/index.js"
  },
  "nyc": {
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/!(*.test.*).[tj]s?(x)"
    ],
    "reporter": [
      "cobertura",
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  },
  "release-it": {
    "hooks": {
      "before:init": "npm test",
      "after:git:release": "echo After git push, before github release",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    },
    "git": {
      "commitMessage": "muthuishere: release v${version}"
    },
    "npm": {
      "publish": false
    }
  },
  "keywords": [
    "mark-deck-script",
    "slide-stream",
    "slide",
    "stream"
  ],
  "author": "Muthukumaran Navaneethakrishnan(https://github.com/muthuishere/)",
  "license": "MIT",
  "homepage": "https://github.com/muthuishere/mark-down-live",
  "repository": {
    "type": "git",
    "url": "git@github.com:muthuishere/mark-down-live.git"
  },
  "bugs": {
    "url": "git@github.com:muthuishere/mark-down-live.git/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@marp-team/marp-cli": "^3.4.0",
    "chalk": "^5.3.0",
    "command-exists": "^1.2.9",
    "dotenv": "^16.3.1",
    "live-server": "^1.2.2",
    "shelljs": "^0.8.5",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@istanbuljs/esm-loader-hook": "^0.2.0",
    "chai": "^4.3.10",
    "generate-license-file": "^3.0.1",
    "mocha": "^10.2.0",
    "mocha-param": "^2.0.1",
    "nyc": "^15.1.0",
    "prettier": "^3.1.0",
    "release-it": "*",
    "sinon": "^17.0.1"
  }
}
